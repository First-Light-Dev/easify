{
  "name": "@first-light-dev/easify",
  "version": "1.0.0",
  "description": "A TypeScript-based utility library providing commonly used APIs and integrations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "yarn build",
    "codegen": "graphql-codegen && ts-node src/scripts/post-codegen.ts"
  },
  "keywords": [
    "typescript",
    "utilities",
    "logging",
    "cin7",
    "shopify"
  ],
  "exports": {
    "./shopify": "./dist/shopify/index.js",
    "./cin7": "./dist/cin7/index.js",
    "./logging": "./dist/logging/index.js"
  },
  "author": "First Light Dev",
  "license": "MIT",
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "prettier": "^2.8.7",
    "@shopify/api-codegen-preset": "^1.1.7",
    "@types/node": "^22.14.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "@types/authenticator": "^1.1.4"
  },
  "peerDependencies": {
    "puppeteer": "^24.7.1"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": false
    }
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "@shopify/admin-api-client": "^1.0.8",
    "authenticator": "^1.1.5",
    "axios": "^1.8.4",
    "puppeteer": "^24.7.1"
  },
  "publishConfig": {
    "@First-Light-Dev:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/First-Light-Dev/easify.git"
  }
}
